{
    "version": "0.2.0",
    "configurations": [
        // VS Code launcher, it starts the debugging process. The same as `npm start`.
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Webserver",
            "program": "${workspaceRoot}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
            "args": [
                "--progress",
                "--colors"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}